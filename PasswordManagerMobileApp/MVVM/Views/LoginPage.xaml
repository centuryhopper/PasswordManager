<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManagerMobileApp.MVVM.LoginPage"
             Title="Login Page"
             BackgroundColor="Lavender">

       <ScrollView>
              <VerticalStackLayout Padding="20"
                            Spacing="25">

                     <!-- Logo Image -->
                     <Image Source="password_manager_flaticon.png"
                            HeightRequest="150"
                            WidthRequest="200"
                            HorizontalOptions="Center"/>

                     <!-- Email Entry -->
                     <Entry Placeholder="Enter a valid email such as abc@gmail.com"
                            Keyboard="Email"
                            Margin="0,10,0,0"
                            Text="{Binding Email}"/>

                     <!-- Password Entry -->
                     <Entry IsPassword="True"
                            Placeholder="Enter a secure password"
                            Text="{Binding Password}"/>

                     <!-- Remember Me -->
                     <StackLayout Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding RememberMe}"/>
                            <Label Text="Remember Me"
                                   VerticalOptions="Center"/>
                     </StackLayout>

                     <!-- Login Button -->
                     <Button Text="Login"
                             BackgroundColor="LightBlue"
                             TextColor="Black"
                             FontSize="20"
                             Command="{Binding LoginCommand}"/>

                     <!-- Error Message (Optional Binding) -->
                     <Label Text="{Binding ErrorMessage}"
                            TextColor="Red"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding IsErrorVisible}"/>

                     <!-- Register Link -->
                     <Label Text="New User? Create Account"
                            TextColor="Blue"
                            TextDecorations="Underline"
                            HorizontalOptions="Center">
                            <!-- Hook this up later to navigation if needed -->
                     </Label>

              </VerticalStackLayout>
       </ScrollView>
</ContentPage>
